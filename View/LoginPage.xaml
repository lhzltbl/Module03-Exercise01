<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module02Exercise01.View.LoginPage"
             Title="LoginPage"
             BackgroundColor="#eeeeea">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="20" Spacing="10">
        <Label 
            Text="Login"
            FontAttributes="Bold"
            FontFamily="Impact"
            FontSize="25" 
            HorizontalOptions="Center" />
        
        <Entry
            Placeholder="Enter username"
            WidthRequest="250"/>

        <Entry
            IsPassword="True"
            Placeholder="Enter password"
            WidthRequest="250" />

        <Button 
            Text="Login"
            WidthRequest="150"
            BackgroundColor="#804b2d" />
    </VerticalStackLayout>
</ContentPage>